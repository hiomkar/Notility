<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @course.name %>
</p>


<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>

<div class="span8">
  <% if @course.notes.any? %>
      <h3>Notes (<%= @course.notes.count %>)</h3>
      <ol class="notes">
        <%= render @notes %>
      </ol>

  <% end %>
</div>