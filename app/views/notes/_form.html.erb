<div class="container">

  <%= form_for @note, :html => {:class => "form-horizontal"} do |f| %>
      <% if @note.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

            <ul>
              <% @note.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label :tag %><br />
        <%= f.text_field :tag %>
      </div>

      <div class="field">
        <%= f.label :course_id %>
        <%= f.collection_select :course_id, Course.all, :id, :name, :class => "dropdown-menu", :prompt => "Select a course" %>
      </div>

      <div class="field">
        <%= hidden_field_tag(:user_id, "1", :name => "note[user_id]") %>
      </div>

      <div class="field">
        <%= f.text_area :content, placeholder: "Compose new micropost..." %>
      </div>
      <%= f.submit "Post", class: "btn btn-large btn-primary" %>

  <% end %>
</div>