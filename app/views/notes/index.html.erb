


<h1>Listing notes</h1>

<table>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th>Course</th>
    <th>Tag</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%= note.content %></td>
    <td><%= note.user_id %></td>
    <td><%= note.course_id %></td>
    <td><%= note.tag %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= form_tag notes_path, :method => 'get', :id => "notes_search" do %>
<p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
</p>
<% end %>


